<div class="flex flex-col gap-4 p-4">
  <div class="flex justify-between items-center">
    <%= render HeadingComponent.new(size: "h1", text: "カテゴリー：#{@category.name}") %>
    <%= render ButtonComponent.new(text: "編集", href: edit_admin_category_path(@category)) %>
  </div>
  <div class="flex flex-col gap-6">
    <div>
      <div class="font-bold text-sm">ID</div>
      <%= @category.id %>
    </div>
    <div>
      <div class="font-bold text-sm">カテゴリ名</div>
      <%= @category.name %>
    </div>
    <div>
      <div class="font-bold text-sm">フィード数</div>
      <%= 1 %>
    </div>
  </div>
  <div class="flex justify-end">
    <%= link_to "削除", admin_category_path(@category), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか?" }, class: "text-red-400 text-sm border px-2 py-1 rounded" %>
  </div>
</div>
